FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build-env
WORKDIR /app
COPY . ./
RUN dotnet restore
RUN dotnet publish -c Release -o out
FROM mcr.microsoft.com/dotnet/aspnet:6.0
ENV TZ="America/Sao_Paulo"
ENV MS_CADASTRO_CONNSTRING=${MS_CADASTRO_CONNSTRING}
ENV MS_RABBITMQ_HOST=${MS_RABBITMQ_HOST}
ENV MS_RABBITMQ_PORT=${MS_RABBITMQ_PORT}
ENV MS_RABBITMQ_USER=${MS_RABBITMQ_USER}
ENV MS_RABBITMQ_PASSWORD=${MS_RABBITMQ_PASSWORD}
ENV MS_RABBITMQ_VHOST=${MS_RABBITMQ_VHOST}
ENV MS_CADASTRO_JWTSECURITYKEY=${MS_CADASTRO_JWTSECURITYKEY}
ENV MS_CADASTRO_CORS_DOMAINS=${MS_CADASTRO_CORS_DOMAINS}
WORKDIR /app
COPY --from=build-env /app/out .
ENTRYPOINT ["dotnet", "MS.Cadastro.dll"]